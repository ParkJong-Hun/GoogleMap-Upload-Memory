<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="300dp"

        android:layout_height="300dp"

        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="200dp"
        android:src="@drawable/logo"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <!--아이디-->
    <TextView
        android:id="@+id/id_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="8dp"
        android:text="아이디"
        app:layout_constraintRight_toLeftOf="@+id/id"
        app:layout_constraintTop_toTopOf="@+id/id"
        android:padding="10dp"
        />
    <EditText
        android:id="@+id/id"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_marginStart="172dp"
        android:layout_marginEnd="173dp"
        android:hint="아이디"
        app:layout_constraintBottom_toTopOf="@+id/pw"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


    <!--비밀번호-->
    <TextView
        android:id="@+id/pw_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="8dp"
        android:text="비밀번호"
        app:layout_constraintRight_toLeftOf="@+id/pw"
        app:layout_constraintTop_toTopOf="@+id/pw"
        android:padding="10dp"
        />

    <EditText
        android:id="@+id/pw"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_marginStart="172dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="173dp"
        android:hint="비밀번호"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />

    <!--버튼-->
    <Button
        android:id="@+id/user_create"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="회원가입"
        app:layout_constraintTop_toBottomOf="@+id/pw"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="50dp"/>
    <Button
        android:id="@+id/login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="로그인"
        app:layout_constraintTop_toBottomOf="@+id/pw"
        app:layout_constraintRight_toLeftOf="@+id/user_create"
        android:layout_marginRight="5dp"/>


</androidx.constraintlayout.widget.ConstraintLayout>